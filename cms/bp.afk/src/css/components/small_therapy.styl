.small-therapy
    width 100%
    background-color #3a84a1
    background-size cover
    background-image url('../img/top-background.png')
    padding 20px 0 20px 0
    img
        width 100%
        height auto
        display block
        margin auto
    div.small-therapy-container
        display flex
        flex 1
        flex-flow row wrap
        align-content stretch
        justify-content space-between
        article
            width calc(100% / 4 - 40px)
            background-color $gradient-green
            border-radius 25%
            padding 20px
            box-sizing border-box
            text-align center
            display flex
            flex-flow column no-wrap
        p
            color $color-text-purple
        img
            background-color white
            border-radius 50%
            padding 5%
            box-sizing border-box
            width 50%
            height auto
            display block
            margin 0 auto 20px auto
        h3
            color white
        .small-terapia-familiar
            background $gradient-green
        .small-terapia-infantil
            background $gradient-yellow
        .small-terapia-de-pareja
            background $gradient-purple
        .small-terapia-individual
            background $gradient-blue
