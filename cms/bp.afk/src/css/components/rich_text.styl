.rich-text
    margin: $double-margin auto $double-margin auto
    p
        font-style normal
        font-size 1.1em
    strong
        font-weight bold
        color $black
    ol
        background whitesmoke
        list-style decimal
        white-space normal
        padding $half-margin $double-margin $half-margin $double-margin

    ul
        margin $margin 0 $margin 0
        padding-left $margin
        li:not(:last-child)
            margin 0 0 $half-margin 0
        li
            font-size 1em
            line-height 1.8em
            box-sizing border-box
            width 100%
            &:before
                content: '- '
            @media screen and (max-width: $mobile-width)
                width 100%
            a
                font-size 1.0em
            p
                display inline
                font-size 1.0em
