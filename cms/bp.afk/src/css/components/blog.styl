.blog-banner
    width 100%
    background $gradient-blue
    padding 20px 0 20px 0
    img
        width 50%
        height auto
        margin auto
        display block

.narrare-banner
    width 100%
    padding 20px 0 20px 0
    .wrapper
        display flex
        flex-flow row wrap
        align-items center
        justify-content center
    img
        width 50%
        max-width 100px
        height auto
        margin 0
        display inline-block
    h1
        width auto
        margin 40px 0 0 0

.filter-form
    display none

.date-created
    width 100%
    display block
    box-sizing border-box
    padding 0 0 2px 0
    margin 0 0 4px 0
    border-bottom 2px solid $blue

.entry-author
    width 100%
    display block
    margin 0 0 20px 0

.blog-image
    max-width 100%
    height auto
    display block
    border-radius $border-radius
    margin 20px 0 20px 0

.share-social
.tags
    margin 20px 0 20px 0
    font-size 1.2em
    display flex
    flex-flow row wrap
    justify-content flex-start
    align-items center
    ul
        display flex
        flex-flow row wrap
        justify-content flex-start
        align-items center
    li
        margin 0 0 0 10px
    a
        color $green

.tags
    a
        color $blue
