.blog-banner
    width 100%
    background $gradient-blue
    padding $margin 0 $margin 0
    margin 0 auto $double-margin auto
    img
        width 50%
        height auto
        margin auto
        display block

.pagination
    display none

.blog-entry
    .wrapper
        width 80%
        max-width $medium-width
    .blog-entry-title
        font-weight bold

.narrare-banner
    width 100%
    padding $margin 0 $margin 0
    .wrapper
        display flex
        flex-flow row wrap
        align-items center
        justify-content center
    img
        width 50%
        max-width 100px
        height auto
        margin 0
        display inline-block
    h1
        width auto
        margin $double-margin 0 0 0

.filter-form
    display none

.date-created
    width 100%
    display block
    box-sizing border-box
    padding 0 0 2px 0
    margin 0 0 4px 0
    border-bottom 2px solid $blue

.entry-author
    width 100%
    display block
    margin 0 0 $margin 0

.blog-image
    max-width 100%
    height auto
    display block
    border-radius $border-radius
    margin $margin 0 $margin 0

.share-social
.tags
    margin $margin 0 $margin 0
    font-size 1.2em
    display flex
    flex-flow row wrap
    justify-content flex-start
    align-items center
    ul
        display flex
        flex-flow row wrap
        justify-content flex-start
        align-items center
    li
        margin 0 0 0 $half-margin
    a
        color $green

.tags
    a
        color $blue
